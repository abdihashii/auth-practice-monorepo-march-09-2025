{
  "name": "auth-backend",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "// ============== DEVELOPMENT COMMANDS ===============": "",
    "dev": "pnpm run dev:local",
    "dev:local": "pnpm run db:start && bun run --hot src/index.ts",
    "dev:docker": "docker compose up auth-backend-db auth-backend-dev",
    "// ================ DATABASE COMMANDS ================": "",
    "db:start": "docker compose -f docker-compose.yml up auth-backend-db -d",
    "db:stop": "docker compose -f docker-compose.yml down auth-backend-db",
    "db:restart": "docker compose -f docker-compose.yml restart auth-backend-db",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "// =============== PRODUCTION COMMANDS ===============": "",
    "start": "bun run src/index.ts",
    "start:docker": "docker compose -f docker-compose.yml up auth-backend",
    "// ================ UTILITY COMMANDS ================": "",
    "clean": "rm -rf node_modules pnpm-lock.yaml"
  },
  "devDependencies": {
    "@types/bun": "^1.2.4",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@sentry/bun": "^9.5.0",
    "drizzle-orm": "^0.40.0",
    "hono": "^4.7.4",
    "pg": "^8.13.3"
  }
}
