{
  "name": "auth-backend",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules",
    "dev": "pnpm run dev:docker",
    "dev:docker": "docker compose -f docker-compose.yml up auth-backend-dev auth-backend-db",
    "dev:db": "docker compose -f docker-compose.yml up auth-backend-db -d",
    "dev:local": "pnpm run dev:db && bun run --hot index.ts",
    "dev:local:watch": "pnpm run dev:db && bun run --watch index.ts",
    "start": "bun run index.ts",
    "stop:db": "docker compose -f docker-compose.yml down auth-backend-db",
    "db:restart": "docker compose -f docker-compose.yml restart auth-backend-db"
  },
  "devDependencies": {
    "@types/bun": "^1.2.4"
  },
  "dependencies": {
    "hono": "^4.7.4"
  }
}
